# n8n basic auth (recommended)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# n8n encryption key (set your own in .env)
N8N_ENCRYPTION_KEY=replace-with-long-random-string

# timezone
GENERIC_TIMEZONE=Europe/Bucharest

# Postgres (shared for n8n + PoC data)
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n
POSTGRES_DB=n8n

# notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/XXX/YYY

# weekly digest email (MailHog in PoC)
DIGEST_TO=demo@local.test
DIGEST_FROM=n8n@local.test
